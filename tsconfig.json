{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "noEmit": true,
    "strict": true,
    "types": [
      "vitest/globals",
      "vite/client",
      "@testing-library/jest-dom"
    ]
  },
  "include": [
    "src",
    "vite.config.ts"
  ]
}
